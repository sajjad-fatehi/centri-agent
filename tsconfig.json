{
  "compilerOptions": {
    "noImplicitAny": false,
    "sourceMap": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["es2020", "ESNext"],
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "**/*.spec.*"
  ]
}
